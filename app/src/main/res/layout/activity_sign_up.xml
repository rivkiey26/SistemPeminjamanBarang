<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.rifqi.peminjamanbarang.SignUp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtNameSignUp"
            android:hint="Name"
            android:text="Rifqi"
            android:textSize="34sp"
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_primaryColor="@android:color/white"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPhoneSignUp"
            android:hint="Phone Number"
            android:text="081210260084"
            android:textSize="34sp"
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_primaryColor="@android:color/white"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <com.rengwuxian.materialedittext.MaterialEditText

            android:id="@+id/edtPasswordSignUp"
            android:hint="Password"
            android:text="1234"
            android:textSize="34sp"
            app:met_baseColor="@android:color/white"
            app:met_maxCharacters="11"
            app:met_floatingLabel="highlight"
            app:met_singleLineEllipsis="true"
            app:met_primaryColor="@android:color/white"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/btnSigUp1"
        android:text="Sign Up"

        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/btnSignUp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content" />
</RelativeLayout>

